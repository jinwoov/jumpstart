@page
@model JumpStartMVC.Pages.IndexModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<body>
    <main>
        <div class="text-center">
            <img src="~/images/jumpstartlogo.png" id="logo"/>
        </div>
        <div class="container border border-dark" id="login-form">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group row text-center">
                    <label asp-for="LoginInfo.Email" class="col-sm-10 mx-auto"></label>
                    <input asp-for="LoginInfo.Email" class="form-control my-3 col-8 mx-auto" />
                    <span asp-validation-for="LoginInfo.Email" class="invalid-feedback text-danger"></span>
                </div>
                <div class="form-group row text-center">
                    <label asp-for="LoginInfo.Password" class="col-sm-10 mx-auto"></label>
                    <input asp-for="LoginInfo.Password" class="form-control my-3 col-8 mx-auto" />
                    <span asp-validation-for="LoginInfo.Password" class="invalid-feedback text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-warning px-3 rounded">Login</button>
                    </div>
                    <div class="col-6 text-right" id="register-box">
                        <a asp-page="/account/register" class="mr-2 text-warning">Register</a>
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>